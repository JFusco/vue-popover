# This file is for unifying the coding style for different editors and IDEs.

# No .editorconfig files above the root directory
root = true

# All files unicode
[*]
charset = utf-8

# Main styles for our files
[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
